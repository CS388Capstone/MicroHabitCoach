<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habit.AddEditHabitFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@android:drawable/ic_menu_revert"
            app:title="@string/add_habit"
            app:titleTextColor="?attr/colorOnSurface">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="@string/save"
                app:icon="@android:drawable/ic_menu_save"
                app:iconGravity="textStart" />
        </com.google.android.material.appbar.MaterialToolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Habit Name Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilHabitName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/habit_name"
                app:errorEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etHabitName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Selection - Icon Buttons in 2x2 Grid -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/category"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="false"
                android:columnOrderPreserved="false">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCategoryFitness"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:minHeight="100dp"
                    android:minWidth="0dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="@string/fitness"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_compass"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCategoryWellness"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:minHeight="100dp"
                    android:minWidth="0dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="@string/wellness"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_agenda"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCategoryProductivity"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:minHeight="100dp"
                    android:minWidth="0dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="@string/productivity"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_sort_by_size"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCategoryLearning"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="8dp"
                    android:minHeight="100dp"
                    android:minWidth="0dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="@string/learning"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_help"
                    app:iconGravity="textTop"
                    app:iconPadding="8dp"
                    app:iconSize="32dp" />
            </GridLayout>

            <!-- Type Selection - Icon Buttons -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/habit_type"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTypeTime"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:minHeight="80dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="TIME"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_recent_history"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTypeMotion"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:minHeight="80dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="MOTION"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_directions"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnTypeLocation"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:minHeight="80dp"
                    android:gravity="center"
                    android:insetTop="12dp"
                    android:insetBottom="12dp"
                    android:insetLeft="12dp"
                    android:insetRight="12dp"
                    android:padding="12dp"
                    android:text="LOCATION"
                    android:textAllCaps="true"
                    android:textSize="11sp"
                    app:icon="@android:drawable/ic_menu_mylocation"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"
                    app:iconSize="20dp" />
            </LinearLayout>

            <!-- Time-based Section -->
            <LinearLayout
                android:id="@+id/sectionTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Reminder Times -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/reminder_times"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCustomTime"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="24dp"
                    android:text="+ Custom" />

                <!-- Days -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/days_of_week"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDays"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="false"
                    app:chipSpacing="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMonday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="M" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTuesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="T" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWednesday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="W" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipThursday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="T" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipFriday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="F" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSaturday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="S" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSunday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Filter"
                        android:text="S" />
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipEveryDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:text="Every Day" />
            </LinearLayout>

            <!-- Motion-based Section -->
            <LinearLayout
                android:id="@+id/sectionMotion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Motion Type -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_directions"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/motion_type"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupMotionType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:singleSelection="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipWalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸš¶ Walk" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸƒ Run" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStationary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸ§˜ Stationary" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Duration -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/duration_minutes"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDuration10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="10 min" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDuration20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="20 min" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDuration30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="30 min"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipDuration60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="60 min" />
                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>

            <!-- Location-based Section -->
            <LinearLayout
                android:id="@+id/sectionLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        app:tint="?attr/colorPrimary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="@string/location"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupLocationPresets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleSelection="true"
                    app:chipSpacing="8dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLocationHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸ  Home" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLocationGym"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸ’ª Gym" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipLocationWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:text="ðŸ’¼ Work" />
                </com.google.android.material.chip.ChipGroup>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPickLocation"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="+ Custom Location"
                    app:icon="@android:drawable/ic_input_add" />

                <TextView
                    android:id="@+id/tvLocationAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/no_location_selected"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <!-- Radius - shown only for custom locations -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRadius"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:hint="@string/radius_meters"
                    app:errorEnabled="true"
                    app:suffixText="@string/meters_suffix">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRadius"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
